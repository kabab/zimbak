extends ./../jade-bootstrap/_bootstrap.jade
block styles
  link(rel='stylesheet', href='/stylesheets/style.css')
  link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin="anonymous")
  link(rel='stylesheet', href='//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css')
  link(rel='stylesheet', href='/plugins/angular-datatables/dist/css/angular-datatables.min.css')
block body
  div(ng-controller=controller, ng-init="init('"+project._id+"')")
    nav.navbar.navbar-default.navbar-fixed-top
      .container-fluid
        #top-navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li: a.navbar-brand Project title
            li#tags-menu: a(href="/projects/"+project._id+"/tags_view") Tags
    #sidebar
      block sidebar
    #content
      block content
  
